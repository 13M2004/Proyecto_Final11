<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos Personales"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_below="@id/titulo"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Teléfono"
        android:inputType="phone"
        android:layout_below="@id/editTextNombre"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textViewUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación:"
        android:layout_below="@id/editTextTelefono"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnObtenerUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Ubicación"
        android:layout_below="@id/textViewUbicacion"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/imageViewUbicacion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btnObtenerUbicacion"
        android:layout_marginBottom="16dp"
        android:contentDescription="Ubicación en el mapa" />

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tomar Fotografía"
        android:layout_below="@id/imageViewUbicacion"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btnTomarFoto"
        android:contentDescription="Fotografía del usuario" />

    <Button
        android:id="@+id/btnGenerarPDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar PDF"
        android:layout_below="@id/imageViewFoto"
        android:layout_marginTop="16dp" />
</RelativeLayout>